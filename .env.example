# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017,localhost:27018,localhost:27019/?replicaSet=rs0
MONGODB_DATABASE=watchqueue

# TMDB API Configuration (optional, for movie metadata)
# Get your API key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Google OAuth (required for persistent account login)
GOOGLE_CLIENT_ID=your_google_oauth_client_id

# Auth session duration in seconds (default 30 days)
AUTH_SESSION_TTL_SECONDS=2592000

# Application Settings
DEBUG=false

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
